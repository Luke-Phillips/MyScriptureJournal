@page
@model MyScriptureJournal.Pages.ScriptureJournalEntries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Book:
        <select asp-for="Book" asp-items="Model.Books">
            <option value="">All</option>
        </select>
        Sort By:
        <select asp-for="isSortedByBook">
            <option value="true">book</option>
            <option value="false">date</option>
        </select>
        Note Keywords: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournalEntry[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournalEntry[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournalEntry[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournalEntry[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournalEntry[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ScriptureJournalEntry) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Date)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ScriptureJournalEntryID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ScriptureJournalEntryID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ScriptureJournalEntryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
